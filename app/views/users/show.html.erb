<h1><%= @user.email %></h1>
<h1><%= @user.full_name %></h1>
<h1><%= @user.bio %></h1>
<p>Followers</p>
<p id='followers-count'><%= @user.followers.count %></p>
<p>Following</p>
<p id='following-count'><%= @user.followings.count %></p>

<% if @user.followers.include?(current_user) %>
  <%= link_to "Unfollow", unfollow_path, remote: true, class:'btn btn-secondary', id:'follow' %> 
<% else %>
  <%= link_to "Follow", follow_path, remote: true, class:'btn btn-primary' %> 
<% end %>